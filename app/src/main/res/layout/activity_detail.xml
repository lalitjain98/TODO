<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lalit.todo.DetailActivity"
    android:orientation="vertical"
    android:padding="16dp"
    >
    <TextView
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title: "
        />
    <EditText
        android:hint="Title"
        android:id="@+id/newTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description: "
        />
    <EditText
        android:hint="Description"
        android:id="@+id/newDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        />
    <TextView
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reminder: "
        />
    <!--<EditText
        android:hint="Reminder Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarmDate"
        android:inputType="date"
        />
    <EditText
        android:hint="Reminder Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarmTime"
        android:inputType="time"
        />-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:paddingRight="16dp"
            android:hint="  Date  "
            android:id="@+id/dateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <Button
            android:id="@+id/dateSetterButtonView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Set Date  "
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:paddingRight="16dp"
            android:hint="  Time  "
            android:id="@+id/timeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <Button
            android:id="@+id/timeSetterButtonView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Time"
            />
    </LinearLayout>
    <Button
        android:id="@+id/saveButton"
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveButtonClicked"
        />
</LinearLayout>
